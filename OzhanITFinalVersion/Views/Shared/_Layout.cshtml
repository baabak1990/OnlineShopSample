@using OzhanCoreLayer.Services.UserPanelServices
@inject IUserPanelServices _services;
@{
    var us = _services.GetUserByUserName(User.Identity.Name);
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <partial name="_styles" />
     <style id="theia-sticky-sidebar-stylesheet-TSS">
        .theiaStickySidebar:after {
            content: "";
            display: table;
            clear: both;
        }</style>
</head>

<body>
    <!-- header-------------------------------->
    <header class="header-main">
        <div class="container-main">
            <div class="d-block">
                <section class="h-main-row">
                    <div class="col-lg-9 col-md-12 col-xs-12 pr">
                        <div class="header-right">
                            <div class="col-lg-3 pr">
                                <div class="header-logo row text-right">
                                    <a href="/">
                                        <img src="~/assets/images/logo.png" alt="دیجی اسمارت">
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-8 pr">
                                <div class="header-search row text-right">
                                    <div class="header-search-box">
                                        <form asp-controller="Home" asp-action="ShowProduct" method="get" class="form-search">
                                            <input type="search"  class="header-search-input" name="Filter"
                                                   placeholder="نام کالا، برند و یا دسته مورد نظر خود را جستجو کنید…">
                                            <div class="action-btns">
                                                <button class="btn btn-search" type="submit">
                                                    <img src="~/assets/images/search.png" alt="search">
                                                </button>
                                                <div class="search-filter">
                                                    <div class="form-ui">
                                                        <div class="custom-select-ui">
                                                            <select class="right">
                                                                <option>همه دسته ها</option>
                                                                <option>کالای دیجیتال</option>
                                                                <option>آرایشی بهداشتی</option>
                                                                <option>ابزاری اداری</option>
                                                                <option>مد پوشاک</option>
                                                                <option>خانه آشپز خانه</option>
                                                                <option>لوازم تحریر و هنر</option>
                                                                <option>کودک و نوزاد</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="search-result">
                                            <ul class="search-result-list mb-0">
                                                <li>
                                                    <a href="#">
                                                        <i class="mdi mdi-clock-outline"></i>
                                                        کالای دیجیتال
                                                        <button class="btn btn-light btn-continue-search" type="submit">
                                                            <i class="fa fa-angle-left"></i>
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="mdi mdi-clock-outline"></i>
                                                        آرایشی و بهداشتی
                                                        <button class="btn btn-light btn-continue-search" type="submit">
                                                            <i class="fa fa-angle-left"></i>
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="mdi mdi-clock-outline"></i>
                                                        گوشی موبایل
                                                        <button class="btn btn-light btn-continue-search" type="submit">
                                                            <i class="fa fa-angle-left"></i>
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="mdi mdi-clock-outline"></i>
                                                        تبلت
                                                        <button class="btn btn-light btn-continue-search" type="submit">
                                                            <i class="fa fa-angle-left"></i>
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="mdi mdi-clock-outline"></i>
                                                        لپ تاپ
                                                        <button class="btn btn-light btn-continue-search" type="submit">
                                                            <i class="fa fa-angle-left"></i>
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="mdi mdi-clock-outline"></i>
                                                        دوربین
                                                        <button class="btn btn-light btn-continue-search" type="submit">
                                                            <i class="fa fa-angle-left"></i>
                                                        </button>
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="localSearchSimple"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-0 col-xs-12 pl">
                        <div class="header-left">
                            <div class="header-account text-left">

                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <ul>
                                        <li><a class="account-item" asp-area="Accounts" asp-controller="Account" asp-action="Register">ثبت نام</a> </li>
                                        <li> <a class="account-item" asp-area="Accounts" asp-controller="Account" asp-action="Login">ورود</a></li>
                                        <li> <a class="account-item" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">ادمین</a></li>
                                    </ul>
                                }
                                else
                                {
                                    <div class="d-block">
                                        <div class="account-box">
                                            <div class="nav-account d-block pl">
                                                <p>@User.Identity.Name عزیز !</p>
                                                <span class="icon-account">
                                                    <img src="~/UserPanel/assets/Pic/@us.ImageName" class="avator">
                                                </span>
                                                <span class="title-account">حساب کاربری </span>
                                                <div class="dropdown-menu">
                                                    <ul class="account-uls mb-0">
                                                        <li class="account-item">
                                                            <a asp-area="Accounts" asp-action="Index" asp-controller="UserPanel" class="account-link">پنل کاربری</a>
                                                        </li>
                                                        <li class="account-item">
                                                            <a href="#" class="account-link">سفارشات من</a>
                                                        </li>
                                                        <li class="account-item">
                                                            <a class="account-item" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">ادمین</a>
                                                        </li>
                                                        <li class="account-item">
                                                            <a asp-area="Accounts" asp-controller="Account" asp-action="Logout">خروج</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="overlay-search-box"></div>
                </section>
                @await Component.InvokeAsync("CourseGroupComponent")
                <partial name="_ResponsiveMenu" />
            </div>
        </div>
    </header>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">جستجو</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="header-search text-right">
                        <div class="header-search-box">
                            <form action="#" class="form-search">
                                <input type="search" class="header-search-input" name="search-input"
                                       placeholder="نام کالا، برند و یا دسته مورد نظر خود را جستجو کنید…">
                                <div class="action-btns">
                                    <button class="btn btn-search" type="submit">
                                        <img src="~/assets/images/search.png" alt="search">
                                    </button>
                                    <div class="search-filter">
                                        <div class="form-ui">
                                            <div class="custom-select-ui">
                                                <select class="right">
                                                    <option>همه دسته ها</option>
                                                    <option>کالای دیجیتال</option>
                                                    <option>آرایشی بهداشتی</option>
                                                    <option>ابزاری اداری</option>
                                                    <option>مد پوشاک</option>
                                                    <option>خانه آشپز خانه</option>
                                                    <option>لوازم تحریر و هنر</option>
                                                    <option>کودک و نوزاد</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="search-result">
                                <ul class="search-result-list mb-0">
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-clock-outline"></i>
                                            کالای دیجیتال
                                            <button class="btn btn-light btn-continue-search" type="submit">
                                                <i class="fa fa-angle-left"></i>
                                            </button>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-clock-outline"></i>
                                            آرایشی و بهداشتی
                                            <button class="btn btn-light btn-continue-search" type="submit">
                                                <i class="fa fa-angle-left"></i>
                                            </button>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-clock-outline"></i>
                                            گوشی موبایل
                                            <button class="btn btn-light btn-continue-search" type="submit">
                                                <i class="fa fa-angle-left"></i>
                                            </button>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-clock-outline"></i>
                                            تبلت
                                            <button class="btn btn-light btn-continue-search" type="submit">
                                                <i class="fa fa-angle-left"></i>
                                            </button>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-clock-outline"></i>
                                            لپ تاپ
                                            <button class="btn btn-light btn-continue-search" type="submit">
                                                <i class="fa fa-angle-left"></i>
                                            </button>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-clock-outline"></i>
                                            دوربین
                                            <button class="btn btn-light btn-continue-search" type="submit">
                                                <i class="fa fa-angle-left"></i>
                                            </button>
                                        </a>
                                    </li>
                                </ul>
                                <div class="localSearchSimple"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="nav-categories-overlay"></div>
    <!-- header-------------------------------->
    <!-- slider-main--------------------------->
    @RenderBody()
    <!-- footer------------------------------------------->
    <partial name="_Footer" />
    <!-- footer---------------------------------->
    <!-- scroll_Progress------------------------->
    <partial name="_Scroll_Progress" />
    <!-- scroll_Progress------------------------->
    <!-- Page Loader----------------------------->
    <partial name="_Page Loader" />
    <!-- Page Loader----------------------------->

</body>
<!-- file js---------------------------------------------------->
<partial name="_JSScripts" />
</html>