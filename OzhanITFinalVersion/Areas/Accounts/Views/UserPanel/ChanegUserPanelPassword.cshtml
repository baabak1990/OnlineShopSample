@model OzhanCoreLayer.ViewModels.AccountVM.UserPanelViewModels.UserPanelChangePassword.ChangeUserPanelPasswordVm
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "~/Areas/Accounts/Views/Shared/_UserPanelLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="account-box">
    <div class="Login-to-account mt-4">
        <div class="account-box-content">
            <h4 class="mb-2">تغییر رمز عبور</h4>
            @if (ViewBag.IsSuccess != null)
            {
                <div class="alert alert-success">
                    <p class="text text-info">
                        کلمه عبور شما با موفقیت تغییر کرد
                    </p>
                </div>
            }
            <form asp-action="ChanegUserPanelPassword" method="post" asp-antiforgery="true" class="form-account text-right">
                <div class="form-account-title">
                    <label asp-for="OldPassword">رمز عبور قبلی</label>
                    <input type="password" class="password-input" asp-for="OldPassword">
                </div>
               <span asp-validation-for="OldPassword" class="text text-danger"></span>
                <div class="form-account-title">
                    <label asp-for="Password">رمز عبور جدید</label>
                    <input type="password" class="password-input" asp-for="Password">
                </div>
                <span asp-validation-for="Password" class="text text-danger"></span>
                <div class="form-account-title">
                    <label asp-for="RePassword">تکرار رمز عبور جدید</label>
                    <input type="password" class="password-input" asp-for="RePassword">
                </div>
                <span asp-validation-for="RePassword" class="text text-danger"></span>
                <div class="form-row-account">
                    <button type="submit" class="btn btn-primary btn-login">تغییر رمز عبور</button>
                </div>
            </form>
        </div>
    </div>
</div>