@using OzhanCoreLayer.ViewModels.ProductVM
@model ProductGroupeIndex
@{
    ViewData["Title"] = "سر گروه محصولات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPabnelLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<ol class="breadcrumb">
    <li><a asp-area="Admin" asp-controller="AdminHome" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
    <li><a asp-area="Products" asp-controller="AdminHome" asp-action="ShowUsers"><i class="fa fa-child"></i> سرگروه محصولات</a></li>

</ol>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">لیست سر گروه ها</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
            </div>
            <hr />
            <div class="row">
                <a class="btn btn-success" asp-area="Products" asp-controller="ProductHome" asp-action="AddLeaderCourse" style="margin: 1% 5%">ثبت سرگروه جدید</a>
            </div>
            <div class="row">
                <div class="col-sm-10">
                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="نام کاربر: activate to sort column ascending" style="width: 389.391px;">نام کاربر</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="مدیریت: activate to sort column ascending" style="width: 120.875px;">مدیریت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListCourse.Where(c => c.ParentId == null))
                            {
                                <tr role="row" class="odd">
                                    <td class="sorting_1">@item.Title</td>
                                    <td>
                                        <a asp-area="Products" asp-controller="ProductHome" asp-action="EditLeaderBoard" asp-route-Id="@item.Id" class="btn btn-block btn-warning">ویرایش</a>
                                        <button class="btn btn-block btn-danger">حذف</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <!-- /.box-body -->
</div>
