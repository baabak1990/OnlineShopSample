@using OzhanCoreLayer.ViewModels.ProductVM
@model ProductGroupeCreateOrEdit
@{
    ViewData["Title"] = "افزودن سرگروه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPabnelLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<form method="post" asp-area="Products" asp-controller="ProductHome" asp-action="AddLeaderCourse">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">@ViewData["Title"]</h3>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="box-body">
                                    <!-- Color Picker -->
                                    <div class="form-group">
                                        <label>نام کاربری</label>
                                        <input type="text" asp-for="Title" class="form-control my-colorpicker1 colorpicker-element">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success" style="margin: 2%">ثبت</button>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
</form>
